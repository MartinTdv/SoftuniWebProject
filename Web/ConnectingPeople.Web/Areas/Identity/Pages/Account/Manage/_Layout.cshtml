    @{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
    <div>
        <div class="row justify-content-center">

            <div class="col-3 mr-3 mt-3">
                <a class="col text-dark font-weight-bold btn btn-info" asp-area="Identity" asp-controller="Account" asp-action="Manage">Настройки</a>
            </div>
            <div class="col-3 ml-3 mt-3">
                <a class="col text-dark font-weight-bold btn btn-info" asp-area="" asp-controller="Profile" asp-action="ByName" asp-route-username="@this.User.Identity.Name">Профил</a>
            </div>
        </div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <partial name="_ManageNav" />
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>

        @section Scripts {
            @RenderSection("Scripts", required: false)
        }
